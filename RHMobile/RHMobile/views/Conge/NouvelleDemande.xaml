                                />-->
                        <cc:MaterialPicker
                                LeftGlyph="{x:Static res:FontAwesomeFonts.Angledown}"
                                ItemsSource="{Binding ListConge}"
                                Title="Type de congé"
                                SelectedItem="{Binding SelectedConge}"
                        />

                    </StackLayout>
                    <StackLayout
                        Grid.Row="1"
                        >
                        <Label
                            Text="Activités Actuelles"
                            TextColor="{StaticResource LabelColor}"
                            FontAttributes="Bold"
                            FontSize="15"
                            Padding="0,10"

                            />

                        <cc:MaterialPicker
                            Title="Projet"
                                LeftGlyph="{x:Static res:FontAwesomeFonts.Angledown}"
                                ItemsSource="{Binding ListProjet}"
                                SelectedItem="{Binding SelectedProjet}"

                        />

                        <cc:MaterialPicker
                                Title="Votre situation sur le projet"
                                LeftGlyph="{x:Static res:FontAwesomeFonts.Angledown}"
                                ItemsSource="{Binding ListSituation}"
                                SelectedItem="{Binding SelectedSituationProjet}"
                        />

                    </StackLayout>
                    <StackLayout
                            Padding="0,20"
                            Orientation="Horizontal"
                            Grid.Row="2"
                            >

                        <cc:CustomButton
                                StyleCorner="Circle"
                                BackgroundColor="White"
                                BorderColor="{StaticResource InputBackground}"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                BorderWidth="2"
                                HeightRequest="30"
                                />
                        <Label
                            Text="Confirmation congé par squad"
                            TextColor="{StaticResource LabelColor}"
                            FontAttributes="Bold"
                            FontSize="15"

                            Padding="0,10"

                            />
                    </StackLayout>

                </Grid>
                <!--Footer-->

                <Grid
                    Grid.Row="2"
                    >
                    <cc:CustomButton
                        Text="Envoyer ma demande"
                        FontSize="20"
                        BackgroundColor="#B0B6BE"
                        VerticalOptions="Center"
