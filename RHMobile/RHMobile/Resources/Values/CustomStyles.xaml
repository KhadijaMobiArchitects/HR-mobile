<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:XForms.Resources"
    x:Class="XForms.Resources.CustomStyles">

    <ResourceDictionary.MergedDictionaries>
        <resources:Colors/>
        <resources:BaseStyles/>
    </ResourceDictionary.MergedDictionaries>

    <!--TransparentEntryStyle-->

    <Style
        x:Key="TransparentEntryStyle"
        BasedOn="{StaticResource BaseEntryStyle}"
        TargetType="Entry"
        >
        <Setter
            Property="BackgroundColor"
            Value="Transparent"/>
        <Setter
            Property="Visual"
            Value="Material"
            />

    </Style>

    <!--overEntryStyle-->

        <Style
        x:Key="OverEntryStyle"
        TargetType="BoxView"
        >
        <Setter
            Property="HeightRequest"
            Value="5"
            />
        <Setter
            Property="BackgroundColor"
            Value="White"
            />
        <Setter
            Property="HorizontalOptions"
            Value="FillAndExpand"
            />
        <Setter
            Property="TranslationY"
            Value="-2"
            />

    </Style>

</ResourceDictionary>
